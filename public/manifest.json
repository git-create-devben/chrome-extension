{
    "manifest_version": 3,
    "name": "Background Color Changer",
    "version": "1.0",
    "description": "Change the background color of web pages",
    "action": {
        "default_popup": "index.html"
    },
    "permissions":[
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}